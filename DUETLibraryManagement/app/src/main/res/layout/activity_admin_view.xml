<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminView"
    android:orientation="vertical"
    android:gravity="center"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/duet"
                android:scaleType="fitXY"
                android:layout_marginTop="0dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DUET Central Library"
                android:textSize="35sp"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="50dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome"
                    android:textSize="30dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="30dp"
                    android:textAlignment="center"
                    />

            </LinearLayout>

            <!-- Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="20sp"
                >
                <Button
                    android:id="@+id/addStdBtnId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Student"
                    android:textSize="20sp"
                    android:layout_marginRight="20sp"
                    />
                <Button
                    android:id="@+id/addLibriranBtnId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Librarian"
                    android:textSize="20sp"
                    />

            </LinearLayout>
            <!-- Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="20sp"
                >
                <Button
                    android:id="@+id/addBookBtnId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Book"
                    android:textSize="20sp"
                    android:layout_marginRight="20sp"
                    />
                <Button
                    android:id="@+id/searchBookBtnId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Search Book"
                    android:textSize="20sp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10sp"
                >
                <Button
                    android:id="@+id/issueBookBtnId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Issue Book"
                    android:textSize="20sp"
                    android:layout_marginRight="20sp"
                    />
                <Button
                    android:id="@+id/adminVReceiveBId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Receive Book"
                    android:textSize="20sp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10sp"
                >
                <Button
                    android:id="@+id/adminVTakeFineId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Take Fine"
                    android:textSize="20sp"
                    android:layout_marginRight="20sp"
                    android:layout_marginLeft="10dp"
                    />
                <Button
                    android:id="@+id/stdRecordBtnId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Student Record"
                    android:textSize="20sp"
                    />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
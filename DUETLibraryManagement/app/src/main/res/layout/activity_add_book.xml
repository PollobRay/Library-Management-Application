<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddBook"
    android:orientation="vertical"
    android:gravity="center"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Book Information"
        android:textAlignment="center"
        android:textSize="25dp"
        android:layout_marginBottom="20sp"
        />

    <!-- Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Title"
            android:textSize="20sp"
            android:textAlignment="center"
            />
        <EditText
            android:id="@+id/addBookTitleId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Book title"
            android:textSize="20sp"
            />

    </LinearLayout>

    <!-- Author-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Author"
            android:textSize="20sp"
            android:textAlignment="center"
            />
        <EditText
            android:id="@+id/addBookAuthorId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Book Author"
            android:textSize="20sp"
            />

    </LinearLayout>

    <!-- Edition-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Edition"
            android:textSize="20sp"
            android:textAlignment="center"
            />
        <EditText
            android:id="@+id/addBookEditionId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Book Edition"
            android:textSize="20sp"
            />

    </LinearLayout>

    <!-- Publication-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Publication"
            android:textSize="20sp"
            android:textAlignment="center"
            />
        <EditText
            android:id="@+id/addBookPublisherId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Book publisher"
            android:textSize="20sp"
            />

    </LinearLayout>

    <!-- Copies -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Total Copies"
            android:textSize="20sp"
            android:textAlignment="center"
            />
        <EditText
            android:id="@+id/addBookCopiesId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Book Copies"
            android:textSize="20sp"
            />

    </LinearLayout>

    <!-- Category-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Category"
            android:textSize="20sp"
            android:textAlignment="center"
            />
        <Spinner
            android:id="@+id/addBookCatId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:entries="@array/bookCategories"
            />

    </LinearLayout>

    <Button
        android:id="@+id/addBookId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:layout_marginTop="50sp"
        />


</LinearLayout>